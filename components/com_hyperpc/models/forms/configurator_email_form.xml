<form addrulepath="/components/com_hyperpc/models/rules">
    <fieldset name="configurator-email-form">
        <field name="username" type="text" class="uk-input uk-form-large"
               label="COM_HYPERPC_CONFIG_EMAIL_FORM_USERNAME_LABEL" />

        <field name="email" type="email" class="uk-input uk-form-large" required="required" validate="email"
               label="COM_HYPERPC_CONFIG_EMAIL_FORM_EMAIL_LABEL" />

        <field name="product_id" type="hidden" required="required" validate="product"/>
        <field name="context" type="hidden" required="required" validate="configurationcontext"/>
    </fieldset>

    <fieldset name="captcha">
        <field name="captcha" type="captcha" validate="captcha" namespace="configurator-email-form"
               label="COM_HYPERPC_CONFIG_EMAIL_CAPTCHA_LABEL" />
    </fieldset>
</form>
