<form>
    <field name="id" type="text" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" default="0"
           class="readonly" readonly="true" />

    <field name="name" type="text" label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC"
            class="input-xxlarge input-large-text" required="true" />

    <field name="published" type="radio" label="JSTATUS"  description="JFIELD_PUBLISHED_DESC" default="1"
           class="btn-group btn-group-yesno">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field>

    <field name="pipeline_id" type="pipelinelist" label="COM_HYPERPC_PIPELINE_LABEL" required="true" />

    <fields name="params" label="COM_CATEGORIES_FIELD_BASIC_LABEL">
        <fieldset name="jparams">

            <field type="hpseparator" title="COM_HYPERPC_SEPARATOR_MOYSKLAD" />

            <field name="moysklad_uuid" type="moyskladstatus" label="COM_HYPERPC_STATUS_PARAM_MOYSKLAD_UUID" />

            <field type="hpseparator" title="COM_HYPERPC_PARAM_AMO_CRM_SEPARATOR" />

            <field name="amo_status_id" type="number" label="COM_HYPERPC_AMO_STATUS_ID_LABEL" />
            <field name="color" type="color" default="#fff" label="COM_HYPERPC_STATUS_COLOR_LABEL" />
            <field name="description" type="editor" label="JGLOBAL_DESCRIPTION" description="COM_HYPERPC_FIELD_DESCRIPTION_DESC"
                   filter="JComponentHelper::filterText" buttons="true" hide="readmore,pagebreak" />
        </fieldset>
    </fields>
</form>
