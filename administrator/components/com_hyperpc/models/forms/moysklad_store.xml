<form addfieldpath="/administrator/components/com_hyperpc/models/fields">
    <field name="id" type="text" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" default="0"
           class="readonly" readonly="true" />

    <field name="name" type="text" label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC"
           class="input-xxlarge input-large-text" size="100" required="true" readonly="true"/>

    <field name="parent_id" type="hpparent" label="COM_HYPERPC_FIELD_PARENT_LABEL"
           description="COM_HYPERPC_FIELD_PARENT_DESC" model="moysklad_stores" title-field="name" readonly="true"/>

    <field name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" size="45"
           hint="JFIELD_ALIAS_PLACEHOLDER" />

    <field name="uuid" type="text" label="uuid" description="uuid" readonly="true"/>

    <field name="published" type="moyskladstate" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" />

    <field name="lft" type="hidden" filter="unset" />
    <field name="rgt" type="hidden" filter="unset" />
    <field name="level" type="hidden" filter="unset" />

    <field name="path" type="text" label="COM_CATEGORIES_PATH_LABEL" description="COM_CATEGORIES_PATH_DESC"
           class="readonly" size="40" readonly="true" />

    <field name="geoid" type="text" label="COM_HYPERPC_FIELD_GEO_ID_LABEL" />

    <fields name="params" label="COM_CATEGORIES_FIELD_BASIC_LABEL">
        <fieldset name="jparams">
            <field name="city" type="text" label="COM_HYPERPC_STORE_CITY_LABEL" hint="COM_HYPERPC_STORE_CITY_HINT" />

            <field name="address" type="text" label="COM_HYPERPC_STORE_ADDRESS_LABEL" hint="COM_HYPERPC_STORE_ADDRESS_HINT" />

            <field name="schedule_string" type="text" label="COM_HYPERPC_STORE_SCHEDULE_LABEL" hint="COM_HYPERPC_STORE_SCHEDULE_HINT" />

            <field name="map_link" type="textarea" rows="3" label="COM_HYPERPC_STORE_MAP_LINK_LABEL" class="input-xxlarge" />

            <field name="schedule" type="schedule" label="COM_HYPERPC_STORE_SCHEDULE_LABEL" />

            <field name="primary" type="radio"
                   label="COM_HYPERPC_STORE_ROLE_LABEL" description="COM_HYPERPC_STORE_ROLE_DESC"
                   default="0" class="btn-group">
                <option value="1">COM_HYPERPC_STORE_ROLE_PRIMARY</option>
                <option value="0">COM_HYPERPC_STORE_ROLE_SECONDARY</option>
            </field>
        </fieldset>
    </fields>
</form>
