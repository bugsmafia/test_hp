<extension type="module" version="2.5" method="upgrade" client="site">
    <version>1.0.0</version>
    <name>mod_hp_configuration</name>
    <author>Sergey Kalistratov</author>
    <creationDate>2017 09</creationDate>
    <authorUrl>https://hyperpc.ru</authorUrl>
    <authorEmail>kalistratov.s.m@gmail.com</authorEmail>
    <description>MOD_HP_CONFIGURATION_DESCRIPTION</description>
    <copyright>Copyright (C) hyperpc.ru, All rights reserved.</copyright>

    <files>
        <folder>assets</folder>
        <folder>language</folder>
        <folder>tmpl</folder>
        <filename module="mod_hp_configuration">mod_hp_configuration.php</filename>
    </files>

    <languages>
        <language tag="ru-RU">language/ru-RU/ru-RU.mod_hp_configuration.ini</language>
        <language tag="ru-RU">language/ru-RU/ru-RU.mod_hp_configuration.sys.ini</language>
    </languages>

    <config>
        <fields name="params">

            <fieldset name="advanced">

                <field name="configurator_menu_item" type="menuitem" published="1"
                       label="MOD_HP_CONFIGURATION_PARAM_CONFIGURATOR_MENU_ITEM_LABEL"
                       description="MOD_HP_CONFIGURATION_PARAM_CONFIGURATOR_MENU_ITEM_DESC" />

                <field name="total" type="list" label="MOD_HP_CART_PARAM_TOTAL_LABEL"
                       description="MOD_HP_CART_PARAM_TOTAL_DESC" default="4">
                    <option value="0">JALL</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                </field>

                <field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field name="cache" type="hidden" default="0"/>
                <field name="owncache" type="hidden" default="0"/>
                <field name="cache_time" type="hidden" default="0"/>
                <field name="cachemode" type="hidden" default="itemid"/>
            </fieldset>

        </fields>
    </config>

</extension>
